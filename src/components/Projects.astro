---
import Bootstrap from "@assets/icons/Bootstrap.astro"
import Laravel from "@assets/icons/Laravel.astro"

const TAGS = {
    LARAVEL: {
        name: 'Laravel',
        class: 'bg-black text-white',
        icon: Laravel,
    },
    BOOTSTRAP: {
        name: 'Bootstrap',
        class: 'bg-purple-500 text-white',
        icon: Bootstrap,
    }
}

const PROJECTS = [
    {
        title:'Gestor de Inventarios',
        description:'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec a diam lectus, congue vel laoreet ac, dictum vitae odio. Maecenas nec enim eget felis facilisis fermentum.',
        link: '#',
        github: '#',
        image: '/projects/gestor1.jpg',
        tags: [TAGS.LARAVEL,TAGS.BOOTSTRAP]
    }
]
---

{
    PROJECTS.map(({title, description, tags, link, github, image}) => (
        <article>
            <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flex-row mb-2">
                {
                    tags.map(tag => (
                        <li>
                            <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                                <tag.icon class="size-4" />
                                {tag.name}
                            </span>
                        </li>
                    ))
                }
            </ul>
            <img class="rounded shadow-2xl shadow-white/10" src={image} alt={`captura de pantalla del Proyecto ${title}`} />
        </article>
    ))
}